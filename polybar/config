[colors]
background = #1B123A
background-alt = #9e4d79
foreground = #f3f4f5
foreground-alt = #F20EF7
primary = #48cfcb
secondary = #F20EF7
tertiary = #F20EF7
tertiary-alt = #a26af9
alert = #ffffff

[settings]

;format-foreground = ${colors.foreground}
;format-background = ${colors.tertiary}
;format-underline = ${colors.secondary}
;format-overline =
;format-spacing = 1
;format-padding = 1
;format-margin =
;format-offset =

[global/wm]
margin-top = 5
margin-bottom = 5

[bar/top]
width = 100%
height = 36
offset-x = 0
offset-y = 5

background = ${colors.background}
foreground = ${colors.foreground}

overline-size = 2
overline-color = #f00
underline-size = 4
underline-color = #00f

;border-top-size = 7
;border-top-color = ${colors.secondary}
border-bottom-size = 3
border-bottom-color = ${colors.secondary}

padding-left = 0
padding-right = 0
module-margin-left = 0
module-margin-right = 0

font-0 = "Noto Sans:size=18"
font-1 = "Ionicons:size=18"
font-2 = "Siji:size=18"
font-3 = "FontAwesome:size=18"

;font-0 = "Noto Sans:pixelsize=12"
;font-1 = "Ionicons:pixelsize=12"
;font-2 = "Siji:pixelsize=12"
;font-3 = "FontAwesome:pixelsize=12"

modules-left = i3
modules-center = xwidnow
modules-right = volume battery wlan cpu memory temperature date powermenu

tray-position = right
tray-padding = 2
;tray-transparent = true
tray-background = ${colors.tertiary-alt}

wm-restack = i3
radius = 2

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock
label-layout = %{F#55}%{F-} %layout%
;label-layout-underline = ${colors.secondary}
label-indicator-padding = 2
label-indicator-margin = 1
label-indicator-background = ${colors.secondary}
;label-indicator-underline = ${colors.secondary}

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /
mount-1 = /home
mount-2 = /invalid/mountpoint

label-mounted = %mountpoint%: %percentage_free%%

label-unmounted = %mountpoint%: not mounted
label-unmounted-foreground = ${colors.foreground-alt}

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

label-mode-padding = 2
label-mode-foreground = #{colors.foreground}
label-mode-background = ${colors.tertiary}

label-focused = %index%
label-focused-background = ${colors.tertiary}
;label-focused-underline = ${colors.secondary}
label-focused-padding = 2

label-unfocused = %index%
label-unfocused-padding = 2
label-unfocused-background = ${colors.background}
;label-unfocused-underline = ${colors.secondary}

label-urgent = 
label-urgent-background = ${colors.primary}
label-urgent-padding = 2

label-visible = %index%
label-visible-background = ${colors.primary}
;label-visible-underline = #a26af9
label-visible-padding = 2

;[module/mpd]
;type = internal/mpd
;
