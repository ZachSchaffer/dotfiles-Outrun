[module/eth]
type = internal/network
interface = enp3s0
interval = 3.0

;format-connected-underline = #55aa55
format-connected-prefix = 
format-connected-padding = 2
format-connected-foreground-foreground = ${colors.foreground-alt}
label-connected = %local_ip%

;format-disconnected-underline = ${self.format-connected-underline}
label-disconnected = %ifname% disconnected
label-disconnected-foreground = ${colors.foreground-alt}

[module/battery]
type = internal/battery
battery = BAT0
adapter = ADP1
full-at = 100

format-charging = <label-charging>
;label-charging-font = 3
label-charging =   %percentage%%
format-charging-background = ${colors.background}
format-charging-foreground = ${colors.foreground}
;format-charging-underline =  ${colors.primary}
format-charging-padding = 4
format-discharging = <label-discharging>
;label-discharging-font = 3
label-discharging =   %percentage%%
format-discharging-background = ${colors.background}
format-discharging-foreground = ${colors.foreground}
;format-discharging-underline = ${colors.primary}
;format-discharging-overline = #60eaa5
format-discharging-padding = 4

[module/date]
type = internal/date
interval = 5

date = "%a, %b %d"
date-alt = "%Y-%m-%d"

time = "%l:%M %p"
time-alt = "%H:%M:%S"

format-prefix = 
format-prefix-padding = 2
format-prefix-foreground = ${colors.foreground}
format-prefix-background = ${colors.background}
;format-underline = ${colors.tertiary-alt}

label = %date% %time%
label-background = ${colors.background}
label-padding = 2

[module/volume]
type = internal/volume

format-volume = <label-volume> <bar-volume>
label-volume = 
label-volume-foreground = ${root.foreground}

format-muted-prefix = " "
format-muted-foreground = ${colors.foreground-alt}
label-muted = sound muted

bar-volume-width = 10
bar-volume-foreground-0 = ${colors.primary}
bar-volume-foreground-1 = ${colors.primary}
bar-volume-foreground-2 = ${colors.primary}
bar-volume-foreground-3 = ${colors.primary}
bar-volume-foreground-4 = ${colors.primary}
bar-volume-foreground-5 = ${colors.primary}
bar-volume-foreground-6 = ${colors.primary}
bar-volume-gradient = false
bar-volume-indicator = |
bar-volume-indicator-font = 2
bar-volume-fill = ─
bar-volume-fill-font = 2
bar-volume-empty = ─
bar-volume-empty-font = 2
bar-volume-empty-foreground = ${colors.foreground-alt}
[module/temperature]
type = internal/temperature
thermal-zone = 7
warn-temperature = 60
interval = 1R

format = <ramp> <label>
format-background = ${colors.background}
format-foreground = ${colors.foreground}
format-warn = <ramp> <label-warn>
format-warn-underline = ${colors.primary}
;format-prefix-background = ${colors.background}
;format-prefix-foreground = ${colors.foreground}
format-prefix-underline = ${colors.primary}

label = %temperature%
;label-underline = ${colors.primary}
label-padding = 2
label-background = ${colors.background}
label-foreground = ${colors.foreground}
label-warn = %temperature%
label-warn-foreground = ${colors.foreground}

ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-foreground = ${colors.foreground}
ramp-background = ${colors.background}
ramp-padding = 2

[module/powermenu]
type = custom/menu
width = 100%

format-spacing = 0

label-open = 
label-open-padding = 3
label-open-background = ${colors.tertiary}
label-open-foreground = ${colors.foreground}
;label-open-underline = ${colors.secondary}

label-close = 
label-close-padding = 2
label-close-foreground = ${colors.foreground}
label-close-background = ${colors.background-alt}
;label-close-underline = ${colors.secondary}

menu-0-0 = "Reboot"
menu-0-0-padding = 2
;menu-0-0-underline = ${colors.secondary}
menu-0-0-foreground = ${colors.foreground}
menu-0-0-background = ${colors.background-alt}
menu-0-0-exec = sudo systemctl reboot

menu-0-1 = "PowerOff"
menu-0-1-padding = 2
menu-0-1-exec = sudo systemctl poweroff
menu-0-1-foreground = ${colors.foreground}
menu-0-1-background = ${colors.background-alt}
;menu-0-1-underline = ${colors.secondary}

